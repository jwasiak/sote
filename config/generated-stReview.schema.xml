<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model" noXsd="true">

  <table name="st_review" phpName="Review">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="order_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="st_order" onDelete="cascade">
      <reference local="order_id" foreign="id" />
    </foreign-key>
    <column name="sf_guard_user_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="cascade">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="active" type="BOOLEAN" default="1" required="true" />
    <column name="score" type="INTEGER" />
    <column name="merchant" type="BOOLEAN" />
    <column name="admin_name" type="LONGVARCHAR" />
    <column name="admin_active" type="BOOLEAN" />
    <column name="anonymous" type="LONGVARCHAR" />
    <column name="agreement" type="BOOLEAN" default="0" required="true" />
    <column name="skipped" type="BOOLEAN" default="0" required="true" />
    <column name="order_number" type="VARCHAR" size="64" />
    <column name="description" type="LONGVARCHAR" />
    <column name="user_ip" type="VARCHAR" size="20" />
    <column name="username" type="VARCHAR" size="255" />
    <column name="language" type="VARCHAR" size="255" />
    <column name="is_pin_review" type="BOOLEAN" default="0" />
    <column name="pin_review" type="INTEGER" default="0" />
    <column name="user_picture" type="VARCHAR" size="255" />
    <column name="user_facebook" type="VARCHAR" size="255" />
    <column name="user_instagram" type="VARCHAR" size="255" />
    <column name="user_youtube" type="VARCHAR" size="255" />
    <column name="user_twitter" type="VARCHAR" size="255" />
    <column name="user_review_verified" type="BOOLEAN" default="0" />
  </table>

  <table name="st_review_order" phpName="ReviewOrder">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="order_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_order" onDelete="cascade">
      <reference local="order_id" foreign="id" />
    </foreign-key>
    <column name="order_number" type="VARCHAR" size="64" />
    <column name="sf_guard_user_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="agreement" type="BOOLEAN" />
    <column name="mark" type="INTEGER" />
    <column name="active" type="BOOLEAN" default="0" />
    <column name="description" type="LONGVARCHAR" />
  </table>

  <table name="st_review_remind" phpName="ReviewRemind">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="title" type="VARCHAR" size="255" />
    <column name="text" type="LONGVARCHAR" />
    <column name="active" type="BOOLEAN" />
  </table>

</database>
