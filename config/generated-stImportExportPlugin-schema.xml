<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stImportExportPlugin.lib.model" noXsd="true">

  <table name="st_export_md5_hash" phpName="ExportMd5Hash">
    <column name="id" type="INTEGER" primaryKey="true" required="true" />
    <column name="type_id" type="INTEGER" primaryKey="true" required="true" />
    <column name="md5hash" type="VARCHAR" size="8192" phpType="array" />
  </table>

  <table name="st_export_profile" phpName="ExportProfile">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="model" type="VARCHAR" size="255" />
  </table>

  <table name="st_export_field" phpName="ExportField">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="field" type="VARCHAR" size="255" />
    <column name="model" type="VARCHAR" size="255" />
    <column name="is_key" type="INTEGER" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="i18n_file" type="VARCHAR" size="255" />
    <column name="i18n" type="BOOLEAN" />
  </table>

  <table name="st_export_profile_has_export_field" phpName="ExportProfileHasExportField">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="export_profile_id" type="INTEGER" primaryKey="true" required="true" />
    <foreign-key foreignTable="st_export_profile" onDelete="restrict">
      <reference local="export_profile_id" foreign="id" />
    </foreign-key>
    <column name="export_field_id" type="INTEGER" primaryKey="true" required="true" />
    <foreign-key foreignTable="st_export_field" onDelete="restrict">
      <reference local="export_field_id" foreign="id" />
    </foreign-key>
  </table>

</database>
