<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stAttributeTemplatePlugin.lib.model" noXsd="true">

  <table name="st_attribute_template" phpName="AttributeTemplate">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="name" type="VARCHAR" size="255" />
  </table>

  <table name="st_attribute_field" phpName="AttributeField">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="attribute_template_id" type="INTEGER" />
    <foreign-key foreignTable="st_attribute_template" onDelete="cascade">
      <reference local="attribute_template_id" foreign="id" />
    </foreign-key>
    <column name="name" type="VARCHAR" size="255" />
    <column name="rank" type="INTEGER" />
    <index name="pattern_field_FKIndex1">
      <index-column name="attribute_template_id" />
    </index>
  </table>

  <table name="st_product_has_attribute_field" phpName="ProductHasAttributeField">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="attribute_field_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_attribute_field" onDelete="restrict">
      <reference local="attribute_field_id" foreign="id" />
    </foreign-key>
    <column name="product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="restrict">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="value" type="VARCHAR" size="255" />
  </table>

</database>
