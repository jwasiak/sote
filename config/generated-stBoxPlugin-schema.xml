<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stBoxPlugin.lib.model" noXsd="true">

  <table name="st_box" phpName="Box" isI18N="true" i18nTable="st_box_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="box_group_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_box_group" onDelete="restrict">
      <reference local="box_group_id" foreign="id" />
    </foreign-key>
    <column name="active" type="BOOLEAN" />
    <column name="opt_name" type="VARCHAR" size="255" change_column="name" />
    <column name="opt_content" type="LONGVARCHAR" change_column="content" />
    <column name="show_title" type="BOOLEAN" />
    <column name="webmaster_id" type="VARCHAR" size="255" />
  </table>

  <table name="st_box_group" phpName="BoxGroup" isI18N="true" i18nTable="st_box_group_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="opt_name" type="VARCHAR" size="255" change_column="name" />
    <column name="box_group" type="VARCHAR" size="45" />
  </table>

  <table name="st_box_i18n" phpName="BoxI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_box" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="content" type="LONGVARCHAR" />
  </table>

  <table name="st_box_group_i18n" phpName="BoxGroupI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_box_group" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" />
    <index name="box_group_Index1">
      <index-column name="culture" />
    </index>
  </table>

</database>
