<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stPartnerPlugin.lib.model" noXsd="true">

  <table name="st_partner" phpName="Partner">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="countries_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_countries" onDelete="restrict">
      <reference local="countries_id" foreign="id" />
    </foreign-key>
    <column name="sf_guard_user_id" type="INTEGER" />
    <foreign-key foreignTable="sf_guard_user" onDelete="restrict">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="company" type="VARCHAR" size="255" />
    <column name="vat_number" type="VARCHAR" size="255" />
    <column name="bank_number" type="VARCHAR" size="255" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="surname" type="VARCHAR" size="255" />
    <column name="street" type="VARCHAR" size="255" />
    <column name="house" type="VARCHAR" size="255" />
    <column name="flat" type="VARCHAR" size="255" />
    <column name="code" type="VARCHAR" size="255" />
    <column name="town" type="VARCHAR" size="255" />
    <column name="phone" type="VARCHAR" size="255" />
    <column name="description" type="LONGVARCHAR" />
    <column name="provision" type="VARCHAR" size="255" />
    <column name="amount" type="VARCHAR" size="255" />
    <column name="system_value" type="INTEGER" />
    <column name="is_active" type="BOOLEAN" default="1" />
    <column name="is_system" type="BOOLEAN" default="0" />
    <column name="is_confirm" type="BOOLEAN" default="0" />
  </table>

  <table name="st_partner_hash" phpName="PartnerHash">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="partner_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_partner" onDelete="restrict">
      <reference local="partner_id" foreign="id" />
    </foreign-key>
    <column name="hash" type="VARCHAR" size="255" />
  </table>

</database>
