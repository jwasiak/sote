<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model" noXsd="true">

  <table name="st_user_points" phpName="UserPoints">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="sf_guard_user_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="sf_guard_user" onDelete="restrict">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="points" type="INTEGER" default="0" />
    <column name="change_points" type="INTEGER" default="0" />
    <column name="change_points_varchar" type="VARCHAR" size="10" />
    <column name="description" type="VARCHAR" size="255" />
    <column name="order_id" type="INTEGER" />
    <foreign-key foreignTable="st_order" onDelete="cascade">
      <reference local="order_id" foreign="id" />
    </foreign-key>
    <column name="order_number" type="VARCHAR" size="255" />
    <column name="order_hash" type="VARCHAR" size="255" />
    <column name="admin_id" type="INTEGER" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="admin_id" foreign="id" />
    </foreign-key>
  </table>

</database>
