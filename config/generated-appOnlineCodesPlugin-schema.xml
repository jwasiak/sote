<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.appOnlineCodesPlugin.lib.model" noXsd="true">

  <table name="app_online_codes" phpName="OnlineCodes">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="product_id" type="INTEGER" />
    <foreign-key foreignTable="st_product" onDelete="restrict">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="name" type="VARCHAR" size="255" />
    <column name="code" type="VARCHAR" size="255" required="true" />
    <column name="usage_limit" type="INTEGER" />
    <column name="used" type="INTEGER" />
  </table>

  <table name="app_online_files" phpName="OnlineFiles">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="restrict">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="name" type="VARCHAR" size="255" />
    <column name="filename" type="VARCHAR" size="255" />
    <column name="media_type" type="VARCHAR" size="20" />
  </table>

</database>
