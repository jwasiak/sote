<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stBlogPlugin.lib.model" noXsd="true">

  <table name="st_blog" phpName="Blog" isI18n="1" i18nTable="st_blog_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="sf_asset_id" type="INTEGER" />
    <foreign-key foreignTable="sf_asset" onDelete="setnull">
      <reference local="sf_asset_id" foreign="id" />
    </foreign-key>
    <column name="active" type="BOOLEAN" />
    <column name="opt_name" type="VARCHAR" size="255" change_column="name" />
    <column name="opt_short_description" type="LONGVARCHAR" change_column="short_description" />
    <column name="opt_long_description" type="LONGVARCHAR" change_column="long_description" />
    <column name="image_main_page" type="VARCHAR" size="255" />
    <column name="image" type="VARCHAR" size="255" />
    <column name="opt_url" type="VARCHAR" size="255" />
    <column name="alternative_url" type="VARCHAR" size="255" />
    <column name="gallery" type="VARCHAR" size="4096" phpType="array" />
  </table>

  <table name="st_blog_category" phpName="BlogCategory" isI18n="1" i18nTable="st_blog_category_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="active" type="BOOLEAN" />
    <column name="opt_name" type="VARCHAR" size="255" />
    <column name="opt_url" type="VARCHAR" size="255" />
    <column name="banner_group" type="VARCHAR" size="255" />
  </table>

  <table name="st_blog_has_blog_category" phpName="BlogHasBlogCategory">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="blog_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_blog" onDelete="cascade">
      <reference local="blog_id" foreign="id" />
    </foreign-key>
    <column name="blog_category_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_blog_category" onDelete="cascade">
      <reference local="blog_category_id" foreign="id" />
    </foreign-key>
  </table>

  <table name="st_blog_i18n" phpName="BlogI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_blog" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="short_description" type="LONGVARCHAR" />
    <column name="long_description" type="LONGVARCHAR" />
    <column name="url" type="VARCHAR" size="255" />
    <index name="blog_Index1">
      <index-column name="url" />
      <index-column name="culture" />
    </index>
  </table>

  <table name="st_blog_category_i18n" phpName="BlogCategoryI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_blog_category" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="url" type="VARCHAR" size="255" />
  </table>

</database>
