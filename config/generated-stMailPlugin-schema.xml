<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stMailPlugin.lib.model" noXsd="true">

  <table name="st_mail_smtp_profile" phpName="MailSmtpProfile">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="name" type="VARCHAR" size="255" required="true" />
    <column name="host" type="VARCHAR" size="255" required="true" />
    <column name="port" type="INTEGER" required="true" default="25" />
    <column name="enc_type" type="VARCHAR" size="7" />
  </table>

  <table name="st_mail_account" phpName="MailAccount">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="mail_smtp_profile_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_mail_smtp_profile" onDelete="restrict">
      <reference local="mail_smtp_profile_id" foreign="id" />
    </foreign-key>
    <column name="version" type="INTEGER" default="1" />
    <column name="username" type="VARCHAR" size="255" required="true" />
    <column name="password" type="VARCHAR" size="255" />
    <column name="email" type="VARCHAR" size="255" required="true" />
    <column name="is_default" type="BOOLEAN" default="" />
    <column name="is_newsletter" type="BOOLEAN" default="" />
    <column name="name" type="VARCHAR" size="255" />
  </table>

  <table name="st_mail_description" phpName="MailDescription" isI18N="true" i18nTable="st_mail_description_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="system_name" type="VARCHAR" size="255" />
    <column name="opt_name" type="VARCHAR" size="255" change_column="name" />
    <column name="opt_description" type="LONGVARCHAR" change_column="description" />
    <column name="is_active" type="BOOLEAN" default="0" />
  </table>

  <table name="st_mail_description_i18n" phpName="MailDescriptionI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_mail_description" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="description" type="LONGVARCHAR" />
    <column name="name" type="VARCHAR" size="255" />
  </table>

</database>
