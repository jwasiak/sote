<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model" noXsd="true">

  <table name="st_payment" phpName="Payment">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="sf_guard_user_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="sf_guard_user" onDelete="restrict">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="payment_type_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="st_payment_type" onDelete="restrict">
      <reference local="payment_type_id" foreign="id" />
    </foreign-key>
    <column name="amount" type="DECIMAL" size="10" scale="2" />
    <column name="status" type="BOOLEAN" required="true" default="0" />
    <column name="in_progress" type="BOOLEAN" required="true" default="0" />
    <column name="cancel" type="BOOLEAN" required="true" default="0" />
    <column name="transaction_id" type="VARCHAR" size="36" required="false" />
    <column name="hash" type="CHAR" size="32" />
    <column name="payment_security_hash" type="CHAR" size="40" />
    <column name="payed_at" type="TIMESTAMP" />
    <column name="version" type="INTEGER" />
    <column name="configuration" type="VARCHAR" size="1024" phpType="array" />
    <column name="allegro_payment_type" type="VARCHAR" size="24" />
    <column name="gift_card_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="st_gift_card" onDelete="setnull">
      <reference local="gift_card_id" foreign="id" />
    </foreign-key>
    <index name="transaction_id_idx">
      <index-column name="transaction_id" />
    </index>
  </table>

  <table name="st_payment_type" phpName="PaymentType" isI18N="true" i18nTable="st_payment_type_i18n">
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="module_name" type="VARCHAR" size="32" />
    <column name="hide_module" type="BOOLEAN" default="0" required="true" />
    <column name="hide_for_configuration" type="BOOLEAN" default="0" required="true" />
    <column name="hide_for_wholesale" type="BOOLEAN" default="0" required="true" />
    <column name="active" type="BOOLEAN" default="1" required="true" />
    <column name="image" type="VARCHAR" size="255" />
    <column name="configuration" type="VARCHAR" size="1024" phpType="array" />
    <column name="opt_name" type="VARCHAR" size="128" required="true" change_column="name" />
    <column name="opt_description" type="LONGVARCHAR" change_column="description" />
    <column name="opt_summary_description" type="LONGVARCHAR" />
  </table>

  <table name="st_order_has_payment" phpName="OrderHasPayment">
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="order_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_order" onDelete="cascade">
      <reference local="order_id" foreign="id" />
    </foreign-key>
    <column name="payment_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_payment" onDelete="cascade">
      <reference local="payment_id" foreign="id" />
    </foreign-key>
  </table>

  <table name="st_payment_type_i18n" phpName="PaymentTypeI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_payment_type" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" required="true" />
    <column name="description" type="LONGVARCHAR" />
    <column name="summary_description" type="LONGVARCHAR" />
  </table>

</database>
