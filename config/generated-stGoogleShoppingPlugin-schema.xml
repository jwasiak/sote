<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stGoogleShoppingPlugin.lib.model" noXsd="true">

  <table name="st_google_shopping" phpName="GoogleShopping">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="cascade">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="active" type="BOOLEAN" required="true" />
    <column name="shipping_price" type="VARCHAR" size="255" />
    <column name="sale_price" type="VARCHAR" size="255" />
  </table>

</database>
