<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stWebApiPlugin.lib.model" noXsd="true">

  <table name="st_web_api_session" phpName="WebApiSession">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="sf_guard_user_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="sf_guard_user" onDelete="restrict">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
    <column name="hash" type="VARCHAR" size="255" />
    <column name="active" type="INTEGER" />
  </table>

</database>
