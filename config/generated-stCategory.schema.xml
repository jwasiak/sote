<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model" noXsd="true">

  <table name="st_category" phpName="Category" isI18N="true" i18nTable="st_category_i18n">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="opt_image" type="VARCHAR" size="255" />
    <column name="lft" type="INTEGER" />
    <column name="rgt" type="INTEGER" />
    <column name="scope" type="INTEGER" required="false" />
    <column name="main_page" type="BOOLEAN" />
    <column name="parent_id" type="INTEGER" />
    <foreign-key foreignTable="st_category" onDelete="restrict">
      <reference local="parent_id" foreign="id" />
    </foreign-key>
    <column name="sf_asset_id" type="INTEGER" />
    <foreign-key foreignTable="sf_asset" onDelete="setnull">
      <reference local="sf_asset_id" foreign="id" />
    </foreign-key>
    <column name="opt_name" type="VARCHAR" size="255" change_column="name" />
    <column name="opt_description" type="LONGVARCHAR" change_column="description" />
    <column name="opt_image_crop" type="VARCHAR" size="450" phpType="array" phpName="ImageCrop" />
    <column name="depth" type="INTEGER" required="true" default="0" />
    <column name="root_position" type="INTEGER" />
    <column name="is_active" type="BOOLEAN" required="true" default="1" />
    <column name="is_hidden" type="BOOLEAN" required="true" default="" />
    <column name="show_children_products" type="BOOLEAN" required="true" default="" />
    <column name="opt_url" type="VARCHAR" size="255" />
    <column name="is_app_image_tag_active" type="BOOLEAN" default="1" />
    <index name="category_Index1">
      <index-column name="depth" />
    </index>
    <index name="category_Index2">
      <index-column name="lft" />
      <index-column name="scope" />
    </index>
    <index name="scope_idx">
      <index-column name="scope" />
    </index>
  </table>

  <table name="st_category_i18n" phpName="CategoryI18n">
    <column name="id" type="integer" required="true" primaryKey="true" />
    <foreign-key foreignTable="st_category" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="culture" isCulture="true" primaryKey="true" type="VARCHAR" size="7" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="url" type="VARCHAR" size="255" />
    <column name="description" type="LONGVARCHAR" />
    <index name="category_Index1">
      <index-column name="url" />
      <index-column name="culture" />
    </index>
  </table>

</database>
