<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stPaczkomatyPlugin.lib.model" noXsd="true">

  <table name="st_paczkomaty_pack" phpName="PaczkomatyPack">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="customer_email" type="VARCHAR" size="255" />
    <column name="customer_phone" type="VARCHAR" size="255" />
    <column name="customer_paczkomat" type="VARCHAR" size="24" />
    <column name="sending_method" type="VARCHAR" size="48" />
    <column name="sender_paczkomat" type="VARCHAR" size="24" />
    <column name="use_sender_paczkomat" type="BOOLEAN" default="" />
    <column name="pack_type" type="CHAR" size="1" />
    <column name="inpost_shipment_id" type="INTEGER" />
    <column name="insurance" type="DECIMAL" size="10" scale="2" />
    <column name="cash_on_delivery" type="DECIMAL" size="10" scale="2" />
    <column name="description" type="VARCHAR" size="255" />
    <column name="code" type="VARCHAR" size="255" />
    <column name="has_cash_on_delivery" type="BOOLEAN" required="false" />
    <column name="customer_delivering_code" type="VARCHAR" size="255" />
    <column name="status" type="VARCHAR" size="255" />
    <column name="status_changed_at" type="timestamp" />
    <column name="order_id" type="INTEGER" />
    <foreign-key foreignTable="st_order" onDelete="setnull">
      <reference local="order_id" foreign="id" />
    </foreign-key>
  </table>

</database>
