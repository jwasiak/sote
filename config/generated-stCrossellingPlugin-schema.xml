<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stCrossellingPlugin.lib.model" noXsd="true">

  <table name="st_crosselling" phpName="Crosselling">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="first_product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="cascade">
      <reference local="first_product_id" foreign="id" />
    </foreign-key>
    <column name="secound_product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="cascade">
      <reference local="secound_product_id" foreign="id" />
    </foreign-key>
    <column name="sum" type="INTEGER" />
    <index name="crosselling_sum">
      <index-column name="sum" />
    </index>
  </table>

</database>
