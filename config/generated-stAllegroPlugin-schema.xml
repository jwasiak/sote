<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="plugins.stAllegroPlugin.lib.model" noXsd="true">

  <table name="st_allegro_auction" phpName="AllegroAuction">
    <column name="created_at" type="timestamp" />
    <column name="updated_at" type="timestamp" />
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="product_id" type="INTEGER" required="true" />
    <foreign-key foreignTable="st_product" onDelete="cascade">
      <reference local="product_id" foreign="id" />
    </foreign-key>
    <column name="product_options" type="VARCHAR" size="255" />
    <column name="requires_sync" type="INTEGER" default="0" />
    <column name="site" type="VARCHAR" size="255" required="false" />
    <column name="name" type="VARCHAR" size="255" />
    <column name="auction_id" type="BIGINT" />
    <column name="ended" type="INTEGER" default="0" />
    <column name="ended_at" type="timestamp" />
    <column name="commands" type="VARCHAR" size="1024" phpType="array" />
    <index name="auction_id_idx">
      <index-column name="auction_id" />
    </index>
  </table>

  <table name="st_allegro_auction_has_order" phpName="AllegroAuctionHasOrder">
    <column name="trans_id" type="BIGINT" required="true" primaryKey="true" />
    <column name="allegro_auction_id" type="BIGINT" primaryKey="true" required="true" />
    <column name="order_id" type="INTEGER" primaryKey="true" required="true" />
    <foreign-key foreignTable="st_order" onDelete="cascade">
      <reference local="order_id" foreign="id" />
    </foreign-key>
    <column name="allegro_user_id" type="BIGINT" required="true" />
  </table>

</database>
