<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" package="lib.model" noXsd="true">

  <table name="st_dashboard" phpName="Dashboard">
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="updated_at" type="INTEGER" required="true" default="0" />
    <column name="label" type="VARCHAR" size="32" required="true" />
    <column name="layout" type="VARCHAR" size="48" required="true" />
    <column name="is_default" type="BOOLEAN" required="true" default="" />
    <column name="sf_guard_user_id" type="INTEGER" required="false" />
    <foreign-key foreignTable="sf_guard_user" onDelete="cascade">
      <reference local="sf_guard_user_id" foreign="id" />
    </foreign-key>
  </table>

  <table name="st_dashboard_gadget" phpName="DashboardGadget">
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="dashboard_id" type="INTEGER" primaryKey="true" required="true" />
    <foreign-key foreignTable="st_dashboard" onDelete="cascade">
      <reference local="dashboard_id" foreign="id" />
    </foreign-key>
    <column name="refreshed_at" type="INTEGER" required="true" default="0" />
    <column name="refresh_by" type="INTEGER" required="true" default="0" />
    <column name="dashboard_column_no" type="INTEGER" required="true" />
    <column name="position" type="INTEGER" required="true" default="1" />
    <column name="color" type="VARCHAR" size="7" />
    <column name="is_minimized" type="BOOLEAN" default="" required="true" />
    <column name="title" type="VARCHAR" size="64" required="true" />
    <column name="name" type="VARCHAR" size="48" required="true" />
    <index name="dashboard_column_position_idx">
      <index-column name="dashboard_id" />
      <index-column name="dashboard_column_no" />
      <index-column name="position" />
    </index>
  </table>

  <table name="st_dashboard_gadget_configuration" phpName="DashboardGadgetConfiguration">
    <column name="id" type="INTEGER" primaryKey="true" required="true" />
    <foreign-key foreignTable="st_dashboard_gadget" onDelete="cascade">
      <reference local="id" foreign="id" />
    </foreign-key>
    <column name="configuration" type="LONGVARCHAR" phpType="array" />
  </table>

</database>
