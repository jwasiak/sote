<?xml version="1.0" encoding="UTF-8"?>
<database name="propel" defaultIdMethod="native" noXsd="true" package="lib.model">

  <table name="st_smarty_slot" phpName="SmartySlot">
    <column name="id" type="INTEGER" primaryKey="true" required="true" autoIncrement="true" />
    <column name="name" type="VARCHAR" size="48" required="true" />
    <column name="theme_id" type="INTEGER" />
    <foreign-key foreignTable="st_theme" onDelete="cascade">
      <reference local="theme_id" foreign="id" />
    </foreign-key>
    <unique name="name_idx">
      <unique-column name="name" />
      <unique-column name="theme_id" />
    </unique>
  </table>

  <table name="st_smarty_slot_content" phpName="SmartySlotContent">
    <column name="id" type="INTEGER" primaryKey="true" required="true" />
    <column name="slot_id" type="INTEGER" primaryKey="true" />
    <foreign-key foreignTable="st_smarty_slot" onDelete="cascade">
      <reference local="slot_id" foreign="id" />
    </foreign-key>
    <column name="is_active" type="BOOLEAN" required="true" default="1" />
    <column name="hash" type="VARCHAR" size="128" required="true" />
    <column name="content" type="LONGVARCHAR" phpType="array" required="true" />
    <index name="hash_idx">
      <index-column name="hash" />
    </index>
  </table>

  <table name="st_smarty_content_block" phpName="SmartyContentBlock">
    <column name="name" primaryKey="true" type="VARCHAR" size="48" required="true" />
    <column name="opt_culture" primaryKey="true" type="VARCHAR" size="5" required="true" />
    <column name="type" type="VARCHAR" size="6" required="true" />
    <column name="content" type="LONGVARCHAR" phpType="array" />
  </table>

</database>
